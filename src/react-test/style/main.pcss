.main {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  cursor: crosshair;

  .box {
    position: absolute;
    width: 4%;
    height: 4%;
  }

  .crosshair-x {
    width: 100%;
    height: 0px;
    top: 50%;
    position: absolute;
    left: 0;
    border-top: dashed 1px black;
    transition: top ease-out 0.1s;
    pointer-events: none;
  }

  .crosshair-y {
    width: 1px;
    height: 100%;
    top: 0;
    position: absolute;
    left: 50%;
    border-left: dashed 1px black;
    transition: left ease-out 0.1s;
    pointer-events: none;
  }

  .crosshair-display {
    position: absolute;
    font-family: sans-serif;
    font-weight: bold;
    color: white;
    pointer-events: none;

    .content {
      position: absolute;
      white-space: nowrap;
      top: 5px;
      left: 5px;
      background-color: #333;
      transition: all ease-out 0.1s;
      font-size: 0.8em;
      padding: 1em;
      text-transform: uppercase;
    }
  }
}